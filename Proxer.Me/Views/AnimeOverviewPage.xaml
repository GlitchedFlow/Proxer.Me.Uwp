															<TextBlock x:Name="genre_list_Hentai"
																	   Margin="5"
																	   RelativePanel.AlignHorizontalCenterWithPanel="True"
																	   MinWidth="300"
																	   TextAlignment="Center"
																	   Text="Genre" />
															<TextBlock x:Name="type_list_Hentai"
																	   Margin="5"
																	   RelativePanel.LeftOf="rating_list_Hentai"
																	   MinWidth="150"
																	   TextAlignment="Center"
																	   Text="Type" />
															<TextBlock x:Name="rating_list_Hentai"
																	   Margin="5 5 25 5"
																	   RelativePanel.AlignRightWithPanel="True"
																	   Text="Rating"
																	   MinWidth="75"
																	   TextAlignment="Center" />
														</RelativePanel>
													</Grid>
												</ListView.Header>
												<ListView.ItemContainerStyle>
													<Style TargetType="ListViewItem"
														   BasedOn="{StaticResource ProxerListViewItem}">
														<Setter Property="HorizontalContentAlignment"
																Value="Stretch" />
														<Setter Property="VerticalContentAlignment"
																Value="Stretch" />
														<Setter Property="VerticalAlignment"
																Value="Center" />
													</Style>
												</ListView.ItemContainerStyle>
												<ListView.ItemTemplate>
													<DataTemplate>
														<RelativePanel Margin="0 5"
																	   HorizontalAlignment="Stretch">
															<Rectangle Height="1"
																	   Margin="10 0"
																	   Fill="{StaticResource BorderBrush}"
																	   RelativePanel.AlignLeftWithPanel="True"
																	   RelativePanel.AlignRightWithPanel="True" />
															<Image x:Name="status_list"
																   Width="20"
																   Height="20"
																   Margin="5"
																   RelativePanel.AlignLeftWithPanel="True"
																   RelativePanel.AlignVerticalCenterWithPanel="True"
																   Source="{Binding StateImage}" />
															<TextBlock x:Name="title_list"
																	   Width="300"
																	   Margin="50 5 5 5"
																	   RelativePanel.AlignLeftWithPanel="True"
																	   RelativePanel.AlignVerticalCenterWithPanel="True"
																	   Text="{Binding Name}"
																	   Foreground="{StaticResource Foreground}"
																	   TextWrapping="WrapWholeWords">
																<ToolTipService.ToolTip>
																	<Image Width="175"
																		   Source="{Binding Cover}"
																		   Stretch="Fill" />
																</ToolTipService.ToolTip>
															</TextBlock>
															<TextBlock x:Name="genre_list"
																	   Width="300"
																	   Margin="5"
																	   RelativePanel.AlignHorizontalCenterWithPanel="True"
																	   RelativePanel.AlignVerticalCenterWithPanel="True"
																	   Text="{Binding Genre}"
																	   Foreground="{StaticResource Foreground}"
																	   TextWrapping="WrapWholeWords" />
															<RelativePanel x:Name="medium"
																		   Margin="5"
																		   RelativePanel.LeftOf="filler"
																		   RelativePanel.AlignVerticalCenterWithPanel="True"
																		   MinWidth="150">
																<TextBlock x:Name="type_list"
																		   Margin="5"
																		   RelativePanel.AlignLeftWithPanel="True"
																		   RelativePanel.AlignVerticalCenterWithPanel="True"
																		   Text="{Binding Medium}"
																		   Foreground="{StaticResource Foreground}" />
																<Image x:Name="german"
																	   Width="20"
																	   Height="15"
																	   Margin="85 5 0 5"
																	   RelativePanel.AlignLeftWithPanel="True"
																	   RelativePanel.AlignVerticalCenterWithPanel="True"
																	   RelativePanel.RightOf="type_list"
																	   Source="ms-appx:///Assets/Proxer/Flags/german.gif"
																	   Visibility="{Binding IsGermanOnline,
																                            Converter={StaticResource boolToVisibilityConverter}}" />
																<Image x:Name="english"
																	   Width="20"
																	   Height="15"
																	   Margin="105 5 5 5"
																	   RelativePanel.AlignLeftWithPanel="True"
																	   RelativePanel.AlignVerticalCenterWithPanel="True"
																	   Source="ms-appx:///Assets/Proxer/Flags/english.gif"
																	   Visibility="{Binding IsEnglishOnline,
																                            Converter={StaticResource boolToVisibilityConverter}}" />
															</RelativePanel>
															<Grid x:Name="rating"
																  MinWidth="75"
																  RelativePanel.AlignVerticalCenterWithPanel="True"
																  RelativePanel.AlignRightWithPanel="True"
																  Visibility="{Binding IsRated, Converter={StaticResource boolToVisibilityConverter}}">
																<Grid Visibility="{Binding DataContext.Model.IsProgressRatingActive, ElementName=entriesList, Converter={StaticResource boolToVisibilityConverter}}">
																	<ProgressBar x:Name="ratingProgress"
																				 Width="75"
																				 Height="25"
																				 Margin="5"
																				 VerticalAlignment="Center"
																				 VerticalContentAlignment="Center"
																				 FlowDirection="RightToLeft"
																				 Foreground="{StaticResource PageBackground}"
																				 Visibility="{Binding IsRated,
															                                  Converter={StaticResource boolToVisibilityConverter}}"
																				 Value="{Binding RatingProgressValue}">
																		<ProgressBar.Background>
																			<LinearGradientBrush>
																				<GradientStop Offset="0"
																							  Color="{Binding DataContext.Model.Settings.HighHeatColor.Color, ElementName=entriesList}" />
																				<GradientStop Offset=".5"
																							  Color="{Binding DataContext.Model.Settings.MiddleHeatColor.Color, ElementName=entriesList}" />
																				<GradientStop Offset="1"
																							  Color="{Binding DataContext.Model.Settings.LowHeatColor.Color, ElementName=entriesList}" />
																			</LinearGradientBrush>
																		</ProgressBar.Background>
																	</ProgressBar>
																</Grid>
																<Grid Visibility="{Binding DataContext.Model.IsRecommandationRatingActive, ElementName=entriesList, Converter={StaticResource boolToVisibilityConverter}}">
																	<TextBlock x:Name="recomandation_list_plus"
																			   VerticalAlignment="Center"
																			   HorizontalAlignment="Center"
																			   Text="&#xE8E1;"
																			   MinWidth="75"
																			   Margin="5"
																			   TextAlignment="Center"
																			   Foreground="{StaticResource Foreground}"
																			   Visibility="{Binding IsRecommended, Converter={StaticResource boolToVisibilityConverter}}"
																			   FontFamily="Segoe MDL2 Assets">
																	</TextBlock>
																	<TextBlock x:Name="recomandation_list_minus"
																			   VerticalAlignment="Center"
																			   HorizontalAlignment="Center"
																			   Text="&#xE8E0;"
																			   MinWidth="75"
																			   Margin="5"
																			   TextAlignment="Center"
																			   Foreground="{StaticResource Foreground}"
																			   Visibility="{Binding IsRecommended, Converter={StaticResource invertedBoolToVisibilityConverter}}"
																			   FontFamily="Segoe MDL2 Assets">
																	</TextBlock>
																</Grid>
																<Grid VerticalAlignment="Center"
																	  HorizontalAlignment="Center"
																	  Margin="5"
																	  Visibility="{Binding DataContext.Model.IsStarRatingActive, ElementName=entriesList, Converter={StaticResource boolToVisibilityConverter}}">
																	<Grid.ColumnDefinitions>
																		<ColumnDefinition Width="*" />
																		<ColumnDefinition Width="*" />
																	</Grid.ColumnDefinitions>
																	<TextBlock VerticalAlignment="Center"
																			   HorizontalAlignment="Center"
																			   FontFamily="Segoe MDL2 Assets"
																			   Text="&#xE00A;"
																			   Margin="1"
																			   Foreground="{StaticResource Foreground}" />
																	<TextBlock x:Name="rating_list"
																			   Text="{Binding Rating}"
																			   TextAlignment="Center"
																			   VerticalAlignment="Center"
																			   HorizontalAlignment="Center"
																			   Grid.Column="1"
																			   Margin="1"
																			   Foreground="{StaticResource Foreground}" />
																</Grid>
															</Grid>
															<TextBlock x:Name="notRate_list"
																	   VerticalAlignment="Center"
																	   HorizontalAlignment="Center"
																	   Text="Unrated"
																	   MinWidth="75"
																	   Margin="5"
																	   TextAlignment="Center"
																	   Visibility="{Binding IsRated, Converter={StaticResource invertedBoolToVisibilityConverter}}"
																	   Foreground="{StaticResource Foreground}"
																	   RelativePanel.AlignVerticalCenterWithPanel="True"
																	   RelativePanel.AlignRightWithPanel="True" />
															<Rectangle x:Name="filler"
																	   MinWidth="75"
																	   RelativePanel.AlignVerticalCenterWithPanel="True"
																	   RelativePanel.AlignRightWithPanel="True" />
														</RelativePanel>
													</DataTemplate>
												</ListView.ItemTemplate>
											</ListView>
										</RelativePanel>
									</Grid>
								</Grid>
							</PivotItem>
						</Pivot>
					</Border>
				</Grid>
			</SplitView.Content>
		</SplitView>
		<FlyoutPresenter x:Name="progressRing"
						 Margin="15"
						 HorizontalAlignment="Center"
						 VerticalAlignment="Center"
						 attached:FadeHelper.Visibility="{Binding Model.IsWorking}"
						 attached:FadeHelper.VisibleOpacity="1.0"
						 Background="{StaticResource Background}"
						 BorderBrush="{StaticResource BorderBrush}"
						 Padding="5">
			<ProgressRing Width="100"
						  Height="100"
						  Margin="5"
						  Foreground="{StaticResource Foreground}"
						  IsActive="{Binding Model.IsWorking}" />
		</FlyoutPresenter>
	</Grid>
</Page>